{
  "extends": ["config:js-lib", "schedule:earlyMondays"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "branchPrefix": "renovate/",
  "labels": ["dependencies", "renovate", "bot"],
  "assignees": ["@natterstefan"],
  "semanticCommits": true,
  "packageRules": [
    {
      "packagePatterns": ["babel"],
      "groupName": "babel"
    },
    {
      "extends": ["packages:linters"],
      "packagePatterns": ["prettier"],
      "groupName": "linters",
      "automerge": false
    },
    {
      "packageNames": ["react", "react-dom"],
      "groupName": "react"
    },
    {
      "packagePatterns": ["jest", "enzyme"],
      "groupName": "testing"
    },
    {
      "packagePatterns": [
        "husky",
        "lint-staged",
        "nodemon",
        "rimraf",
        "size-limit"
      ],
      "groupName": "tools"
    },
    {
      "packagePatterns": ["webpack"],
      "groupName": "webpack"
    },
    {
      "packageNames": ["node"],
      "major": {
        "enabled": false
      }
    }
  ]
}
